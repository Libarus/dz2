      .hFooter
    .footer
      .wrapper
        .footer__block.clearfix
          .footer__logo
            a.logo__link(href='/')
              img.logo__imge(src='images/logotfooter.png', alt='COOLTECH')
          .footer__right
            .footer__socials
              ul.footer__socials-list
                - var soc_f = ['fb_f','vk_f','tw_f']
                each item in soc_f
                  li.footer__socials-item
                    a.footer__socials-link(href='#')
                      i.icons(class="icon-" + item)
            .footer__nav
              ul.footer__nav-list
                each item in navig
                  li.footer__nav-item
                    a.footer__nav-link(href='#')= item
